        <img class=" animate__animated animate__fadeInLeft" id="im2" src="/Imagenes/Imagenes 2/coffee cup-pana1.png"
          alt="">
        <img class=" animate__animated animate__fadeInRight" id="im3" src="/Imagenes/Imagenes 2/coffee cup-pana2.png"
